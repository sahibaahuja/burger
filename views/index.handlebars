<h1>BURGERSSS!</h1>



<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{!-- {{> burgers/burger-block}} --}}
    {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <div>{{id}}. {{burger_name}}</div>
    {{/if}}
    {{/each}}
</ul>


<form class="create-form">

  <div class="form-group">
     <label for="name"></label>
   <textarea id="newBurger" name="burger-name" placeholder="What do you want to eat?"></textarea>
  </div>

   <button type="submit" id="submit-button">Add a Burger</button>
</form>